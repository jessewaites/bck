<%= render 'layouts/editor_header' %>
<div data-animation="fadeInUp-fadeOutDown">
  <div class="col-xs-10 col-sm-10 col-md-6 col-md-offset-3 col-sm-offset-1 col-xs-offset-1">
    <div class="post-metadata">
      <%= avatar_for(current_user, size: 40) %>
      <div class="post-info">
        <%= link_to current_user.username, current_user %><br/>
        <small>New Post</small>
      </div>
    </div>
    <h4>Tell your hiking / backpacking story! Add a featured image to your post by clicking the blue camera icon below.</h4>
    <%= render 'form', post: @post, location: @location %>
  </div>
</div>
